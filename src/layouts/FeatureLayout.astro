---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description: string;
  mainImage?: string;
}

const { title, description, mainImage } = Astro.props;
---

<Layout title={title}>
  <div class="fixed inset-0 z-[-1] bg-black" aria-hidden="true">
    <div class="absolute inset-0 bg-arcade-grid bg-[size:40px_40px] opacity-15"></div>
    <div
      class="absolute inset-0 bg-gradient-to-b from-arcade-neon-purple/20 via-arcade-neon-blue/10 to-black"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(153,0,255,0.1),transparent_50%)]"
    >
    </div>
  </div>
  <main
    class="font-primary flex flex-col space-y-0 bg-gradient-to-b from-transparent to-black min-h-screen pt-20"
  >
    <section
      class="flex flex-col items-center justify-center min-h-[70vh] py-16 px-4 relative overflow-visible"
    >
      <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-arcade-neon-purple/20 blur-[120px] rounded-full"
      >
      </div>
      <div
        class="absolute bottom-0 w-full h-[100%] bg-gradient-to-t from-black via-arcade-neon-purple/5 to-transparent blur-3xl z-[1]"
      >
      </div>

      <div class="container mx-auto relative z-[2]">
        <div
          class="flex flex-col items-center justify-center text-center gap-12 mb-16 relative max-w-4xl mx-auto"
        >
          <div class="relative z-[1] px-8 py-12">
            <h1
              class="text-4xl md:text-6xl font-bold text-white [text-shadow:0_0_5px_#ff0044,0_0_15px_#ff0044] animate-arcade-float relative z-[2]"
            >
              {title}
            </h1>

            <p
              class="text-xl text-gray-300 max-w-2xl mx-auto mt-12 relative z-[2]"
            >
              {description}
            </p>
          </div>
        </div>

        {
          mainImage && (
            <div class="w-full max-w-5xl mx-auto rounded-lg overflow-hidden shadow-2xl">
              <img
                src={mainImage}
                alt={title}
                class="w-full h-auto object-cover"
              />
            </div>
          )
        }
      </div>
    </section>

    <section class="relative py-20">
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent via-arcade-neon-blue/5 to-transparent"
      >
      </div>
      <div class="container mx-auto px-4">
        <slot />
      </div>
    </section>
  </main>
</Layout> 