---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";

// Receive the props
const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="flex items-center lowercase gap-1 z-10 w-full md:w-auto md:px-3 py-2 font-medium text-gray-300 hover:text-arcade-neon-purple transition-colors duration-300 hover:[text-shadow:0_0_5px_rgba(153,0,255,0.3)]"
    >
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180 transition-transform duration-300"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"
        />
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "md:absolute z-100 w-full md:w-[320px] z-10",
          lastItem
            ? "md:right-0 origin-top-right"
            : "md:left-0 origin-top-left",
        ]}
      >
        <div class="p-4 bg-black/95 backdrop-blur-xl md:rounded-lg border-2 border-arcade-neon-purple/20 shadow-[0_0_15px_rgba(153,0,255,0.1)] flex flex-col gap-3 mt-2">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="flex items-start gap-4 p-3 text-gray-300 rounded-md group/item hover:bg-arcade-neon-purple/5 transition-all duration-300 hover:border-arcade-neon-purple/20 border-2 border-transparent"
              >
                <div>
                  <div class="font-medium text-gray-100 text-[15px] group-hover/item:text-arcade-neon-purple group-hover/item:[text-shadow:0_0_5px_rgba(153,0,255,0.3)] transition-all duration-300">
                    {item.title}
                  </div>
                  <div class="text-sm text-gray-400 mt-0.5 group-hover/item:text-gray-300 transition-colors duration-300">
                    {item.description}
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>