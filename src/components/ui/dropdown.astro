---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";

// Receive the props
const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="flex items-center lowercase gap-1 z-10 w-full md:w-auto md:px-3 py-2 font-medium"
    >
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"
        />
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "md:absolute z-100 w-full md:w-[320px] z-10",
          lastItem
            ? "md:right-0 origin-top-right"
            : "md:left-0 origin-top-left",
        ]}
      >
        <div class="p-4 bg-white md:rounded-md md:border flex flex-col gap-3">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="flex items-start gap-4 p-3 text-white md:text-gray-600 hover:text-gray-900 rounded-md group/item hover:bg-gray-50 transition-colors"
              >
                <div>
                  <div class="font-medium text-black text-[15px]">
                    {item.title}
                  </div>
                  <div class="text-sm text-gray-500 mt-0.5">
                    {item.description}
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>