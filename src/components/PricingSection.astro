---
import { PRICING_PLANS } from "@/lib/constants";
import Container from "./ui/container.astro";
import PricingCard from "./ui/PricingCard.astro";
import { Tabs, TabsList, TabsTrigger, TabsContent } from "./ui/tabs";
---

<section id="pricing" class="bg-slate-100 h-full py-[50px]">
  <Container class:list={["px-0"]}>
    <div
      data-aos="fade-up"
      class="flex flex-col p-0 justify-center items-center gap-[50px]"
    >
      <div class="flex flex-col gap-5 justify-center items-center">
        <span class="uppercase text-slate-400 text-sm font-bold"
          >how much it costs tho?</span
        >
        <h2
          class="text-xl md:text-3xl lg:text-5xl font-bold text-fireshort_red text-center capitalize"
        >
          Straight and Simple Pricing
        </h2>
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 justify-center items-center"
      >
        {
          PRICING_PLANS.map((plan) => (
            <PricingCard
              variant={plan.variant}
              isMonthly={plan.isMonthly}
              popular={plan.popular}
              features={plan.features}
              price={plan.price}
            />
          ))
        }
      </div>
    </div>
  </Container>
</section>
