---
import Layout from "../layouts/Layout.astro";
import { Link } from "@/components/ui/react/link";
import TabsSection from "@/components/ui/react/TabsSection";
import FeaturesSection from "@/components/ui/react/FeatureSection";
import WorkflowSection from "@/components/ui/react/Workflow";
import UseCasesSection from "@/components/ui/react/UseCases";
import AdditionalSections from "@/components/ui/react/AdditionalSections";
import PricingSection from "@/components/ui/react/PricingSection";
import FAQSection from "@/components/ui/react/FAQSection";
---

<Layout title="">
  <main class="font-primary flex flex-col space-y-8 bg-brand-background min-h-screen pt-20">
    <section
      id="hero"
      class="flex flex-col items-center justify-center min-h-[calc(100vh-5rem)] py-16 px-4"
    >
      <div class="container mx-auto">
        <div
          class="flex flex-col items-center justify-center text-center gap-12 mb-16"
        >
          <h1 class="text-4xl md:text-6xl space-y-4  font-bold text-brand-gray-800">
            <p>Transform Your</p>
            <div class="relative inline-block w-[250px">
              <span class="flip-text absolute left-0 top-0">
                <span
                  class="inline-block whitespace-nowrap bg-[#F01414] w-full text-white px-4 py-1 rounded-lg"
                  >Audios</span
                >
              </span>
              <span class="flip-text absolute left-0 top-0">
                <span
                  class="inline-block whitespace-nowrap bg-[#F01414] w-full text-white px-4 py-1 rounded-lg"
                  >Podcasts</span
                >
              </span>
              <span class="flip-text">
                <span
                  class="inline-block whitespace-nowrap bg-primary w-full text-white px-4 py-1 rounded-lg"
                  >Videos</span
                >
              </span>
            </div>
            <br class="hidden sm:block"/>
            <p>Into a Content Machine</p>
          </h1>

          <p class="text-xl text-brand-gray-600 max-w-2xl mx-auto">
            Your AI content assistant that turns long-form content into
            ready-to-publish social posts, articles, highlight clips, and
            detailed analytics. Create weeks of content in minutes, not hours.
          </p>

          <div
            class="flex flex-col sm:flex-row items-center gap-4 text-brand-gray-600"
          >
            <div class="flex items-center gap-2">
              <svg
                class="w-5 h-5 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span>AI Video Editor</span>
            </div>
            <div class="flex items-center gap-2">
              <svg
                class="w-5 h-5 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span>Auto-Generated Content</span>
            </div>
            <div class="flex items-center gap-2">
              <svg
                class="w-5 h-5 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span>Smart transcript analysis</span>
            </div>
          </div>

          <div class="flex justify-center">
            <Link
              href="https://app.fireshort.in"
              variant="destructive"
              size="lg"
              className="bg-primary px-8 py-4 text-lg font-bold text-white rounded-lg hover:bg-primary/90 transition-colors"
            >
              Start Creating Now
            </Link>
          </div>
        </div>
        <div class="w-full">
          <TabsSection client:load />
        </div>
      </div>
    </section>
    <section>
      <FeaturesSection client:visible />
      <WorkflowSection client:visible />
      <UseCasesSection client:visible />
      <AdditionalSections client:visible />
      <PricingSection client:visible />
      <FAQSection client:visible />
    </section>
  </main>
</Layout>

<style>
  .flip-text {
    animation: flipText 9s infinite;
    transform-origin: center;
    display: block;
    backface-visibility: hidden;
  }

  .flip-text:nth-child(1) {
    animation-delay: 6s;
  }

  .flip-text:nth-child(2) {
    animation-delay: 3s;
  }

  @keyframes flipText {
    0%,
    30% {
      transform: rotateX(0deg);
      opacity: 1;
    }
    33%,
    96% {
      transform: rotateX(-90deg);
      opacity: 0;
    }
    97%,
    100% {
      transform: rotateX(0deg);
      opacity: 1;
    }
  }
</style>
