---
import Layout from "../layouts/Layout.astro";
import { Link } from "@/components/ui/react/link";
import TabsSection from "@/components/ui/react/TabsSection";
import FeaturesSection from "@/components/ui/react/FeatureSection";
import WorkflowSection from "@/components/ui/react/Workflow";
import UseCasesSection from "@/components/ui/react/UseCases";
import AdditionalSections from "@/components/ui/react/AdditionalSections";
import PricingSection from "@/components/ui/react/PricingSection";
import FAQSection from "@/components/ui/react/FAQSection";
---

<Layout title="Fireshort - AI Content platform">
  <div class="fixed inset-0 z-[-1] bg-zinc-950" aria-hidden="true">
    <div class="absolute inset-0 bg-[size:40px_40px] opacity-50 bg-grid-pattern">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-b from-zinc-800/15 via-zinc-900/20 to-zinc-950"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(161,161,170,0.05),transparent_50%)]"
    >
    </div>
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/15 rounded-full blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute top-1/3 right-1/4 w-96 h-96 bg-indigo-500/15 rounded-full blur-3xl animate-pulse delay-1000"
    >
    </div>
    <div
      class="absolute bottom-1/4 left-1/3 w-96 h-96 bg-red-500/15 rounded-full blur-3xl animate-pulse delay-2000"
    >
    </div>
  </div>
  <main
    class="font-primary flex flex-col space-y-0 bg-gradient-to-b from-transparent to-zinc-950 min-h-screen pt-20"
  >
    <section
      id="hero"
      class="flex flex-col items-center justify-center min-h-[calc(100vh-5rem)] py-10 px-4 relative overflow-visible"
    >
      <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-gradient-to-r from-purple-500/5 via-blue-500/5 to-red-500/5 blur-[100px] rounded-full animate-gradient"
      >
      </div>
      <div
        class="absolute bottom-0 w-full h-[100%] bg-gradient-to-t from-zinc-950 via-zinc-900/10 to-transparent blur-2xl z-[1]"
      >
      </div>

      <div class="absolute inset-0 bg-mesh-gradient opacity-5"></div>

      <div class="container mx-auto relative z-[2]">
        <div
          class="flex flex-col items-center justify-center text-center gap-12 mb-12 relative max-w-4xl mx-auto"
        >
          <div class="relative z-[1] p-2">
            <h1
              class="text-4xl md:text-6xl font-bold relative z-[2] text-zinc-100"
            >
              Transform a single video to engaging content effortlessly
            </h1>

            <p
              class="text-lg text-zinc-400 max-w-2xl mx-auto mt-6 relative z-[2] p-6"
            >
              Your AI content platform that turns long-form content into
              ready-to-publish social posts, articles, highlight clips, and
              detailed analytics. Create weeks of content in minutes, not hours.
            </p>

            <div class="flex justify-center mt-6 relative z-[2]">
              <div class="relative group">
                <Link
                  href="https://app.fireshort.in"
                  variant="destructive"
                  size="lg"
                  className="relative bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg font-medium py-2 px-8 shadow-lg hover:shadow-red-500/25 transition-all duration-300 hover:-translate-y-1"
                >
                  Start Creating Now
                </Link>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full relative z-[1]">
          <TabsSection client:load />
        </div>
      </div>
    </section>
    <section class="mt-40 relative">
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent via-zinc-800/5 to-transparent"
      >
      </div>
      <FeaturesSection client:visible />
      <WorkflowSection client:visible />
      <UseCasesSection client:visible />
      <AdditionalSections client:visible />
      <div class="p-20">
        <PricingSection client:visible />
      </div>
      <FAQSection client:visible />
    </section>
  </main>
</Layout>

<style>
  @keyframes gradient-xy {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-xy {
    animation: gradient-xy 15s ease infinite;
  }

  .animate-gradient-text {
    background-size: 200% 200%;
    animation: gradient-xy 8s ease infinite;
  }

  @keyframes sparkle {
    0%, 100% { opacity: 0; transform: scale(0.8); }
    50% { opacity: 1; transform: scale(1.2); }
  }

  .bg-grid-pattern span {
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    border-radius: 10px;
    background: white;
    clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    opacity: 0;
    filter: blur(1px);
    transform-origin: center;
    margin-left: -6px;
    margin-top: -6px;
  }

  .bg-grid-pattern span:nth-child(1) { top: 120px; left: 160px; animation: sparkle 6s ease-in-out infinite; }
  .bg-grid-pattern span:nth-child(8) { top: 40px; left: 520px; animation: sparkle 6s ease-in-out infinite 3.5s; }
  .bg-grid-pattern span:nth-child(9) { top: 200px; left: 1240px; animation: sparkle 6s ease-in-out infinite 2.8s; }
  .bg-grid-pattern span:nth-child(10) { top: 320px; left: 760px; animation: sparkle 6s ease-in-out infinite 1.8s; }
</style>
